<div class="container shadow p-3 m-4 bg-white rounded">
  <%= form_with model: @article do |f| %>
  <div class="row d-flex">
    <div class="col-2">
      <%= f.label :title %>
    </div>

    <div class="col-10 flex-fill">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="row d-flex">
    <div class="col-2 d-flex">
      <%= f.label :content %>
    </div>
    <div class="col-10 flex-fill">
      <%= f.text_field :content %>
    </div>
  </div>

  <div>
    <%= f.submit %>
  <% end %>
  </div>
</div>
